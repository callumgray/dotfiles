# resize window (you can also use the mouse for that)
mode "resize" {

        set $px_res 5
        set $ppt_res 5
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width $px_res px or $ppt_res ppt
        bindsym k resize grow height $px_res px or $ppt_res ppt
        bindsym l resize shrink height $px_res px or $ppt_res ppt
        bindsym semicolon resize grow width $px_res px or $ppt_res ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width $px_res px or $ppt_res ppt
        bindsym Up resize grow height $px_res px or $ppt_res ppt
        bindsym Down resize shrink height $px_res px or $ppt_res ppt
        bindsym Right resize grow width $px_res px or $ppt_res ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+z mode "resize"

# need to remove window borders for i3-gaps
for_window [class="^.*"] border pixel 0

