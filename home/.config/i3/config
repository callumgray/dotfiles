# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        # i3bar_command /home/callum/.config/lemonbar/lemonbar.sh
        i3bar_command "i3status | i3bar"
        font pango:Overpass Mono 12, Material-Design-Iconic-Font 10
        separator_symbol " | "
        position top
        colors {
            statusline         $white
            background         $transparent
            separator          $white

    #                          BORDER       BACKGROUND   TEXT
            focused_workspace  $transparent $transparent $white
            inactive_workspace $transparent $transparent $white
            active_workspace   $transparent $transparent $white
            urgent_workspace   $red         $red         $transparent
            binding_mode       $transparent $transparent $white
        }

}
